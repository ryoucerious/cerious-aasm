{
  "name": "cerious-aasm",
  "version": "1.0.0-beta",
  "description": "A desktop application for managing ARK: Survival Ascended dedicated servers with cross-platform support.",
  "author": {
    "name": "r YOU cerious",
    "email": "ryoucerious.dev@gmail.com"
  },
  "homepage": "https://github.com/ryoucerious/cerious-aasm",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:electron": "jest --config jest.electron.config.js",
    "test:electron:watch": "jest --config jest.electron.config.js --watch",
    "test:electron:coverage": "jest --config jest.electron.config.js --coverage",
    "validate-maps": "node scripts/validate-maps.js",
    "build-and-run": "npm run build && npm run electron",
    "electron": "npx tsc -p tsconfig.electron.json && electron electron/main.js",
    "electron:dev": "concurrently \"npm run start\" \"wait-on http://localhost:4200 && cross-env NODE_ENV=development npm run electron\"",
    "electron:build": "npm run build && npx tsc -p tsconfig.electron.json",
    "electron:package": "npm run electron:build && electron-builder",
    "electron:package:linux": "npm run electron:build && electron-builder --linux",
    "electron:package:windows": "npm run electron:build && electron-builder --win",
    "headless": "npx tsc -p tsconfig.electron.json && electron electron/main.js --headless",
    "headless:dev": "npx tsc -p tsconfig.electron.json && cross-env NODE_ENV=development electron electron/main.js --headless --port=3000",
    "headless:auth": "npx tsc -p tsconfig.electron.json && electron electron/main.js --headless --auth-enabled --password=admin123 --port=3000",
    "headless:auth:custom": "npx tsc -p tsconfig.electron.json && electron electron/main.js --headless --auth-enabled --username=admin --password=changeme",
    "web-ui": "npm run build && npx tsc -p tsconfig.electron.json && electron electron/main.js --headless",
    "web-ui:dev": "npm run build && npx tsc -p tsconfig.electron.json && cross-env NODE_ENV=development API_PORT=3001 API_HOST=0.0.0.0 ENABLE_CORS=true SERVE_UI=true electron electron/main.js --headless",
    "api:dev": "npx tsc -p tsconfig.electron.json && cross-env NODE_ENV=development API_PORT=3001 API_HOST=0.0.0.0 ENABLE_CORS=true electron electron/main.js --headless",
    "check-platform": "node scripts/check-platform.js",
    "setup-linux": "./scripts/setup-linux-deps.sh",
    "preinstall": "node scripts/check-platform.js",
    "postinstall": "npx electron-rebuild -f -w node-pty -v 21.4.4"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.0",
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "adm-zip": "^0.5.16",
    "bcrypt": "^6.0.0",
    "bootstrap": "^5.3.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "font-awesome": "^4.7.0",
    "fs-extra": "^11.2.0",
    "helmet": "^8.1.0",
    "ngx-toastr": "^19.0.0",
    "node-fetch": "^2.7.0",
    "node-pty": "^1.0.0",
    "ps-list": "^8.1.1",
    "rcon": "^1.1.0",
    "rxjs": "~7.8.0",
    "tar": "^7.4.3",
    "tslib": "^2.3.0",
    "uuid": "^13.0.0",
    "ws": "^8.18.3",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.0.3",
    "@angular/cli": "^20.0.3",
    "@angular/compiler-cli": "^20.0.0",
    "@tailwindcss/postcss": "^4.1.10",
    "@types/adm-zip": "^0.5.7",
    "@types/jasmine": "~5.1.0",
    "@types/jest": "^30.0.0",
    "@types/node-fetch": "^2.6.12",
    "@types/ws": "^8.18.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^21.4.4",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "jasmine-core": "~5.7.0",
    "jest": "^30.1.3",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "node-mocks-http": "^1.17.2",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.5.6",
    "sharp": "^0.34.4",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.4",
    "typescript": "~5.8.2",
    "wait-on": "^8.0.1"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.cerious.aasm",
    "productName": "Cerious AASM",
    "publish": null,
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "logo.png",
      "category": "public.app-category.games",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "icon": "logo.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "logo.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Game",
      "synopsis": "ARK: Survival Ascended Server Manager",
      "description": "A desktop application for managing ARK: Survival Ascended dedicated servers with cross-platform support.",
      "maintainer": "r YOU cerious"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "asarUnpack": [
      "**/node_modules/node-pty/**"
    ]
  }
}
